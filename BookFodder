import java.util.*;
import java.lang.Integer;

public class BookFodder {
    public static void main(String[] args) {
    	
            }
    
    public static void mWeightinput(){
    	Scanner scanner = new Scanner(System.in);
        
        List<Integer> weightlist = new ArrayList<Integer>();

        System.out.println("輸入重量(克)(使用7777結束)"); 

        while(true) { 
        	
            System.out.print("# "); 
            int weightinput = scanner.nextInt(); 
            if(weightinput == 7777)
                 break; 
            weightlist.add(weightinput); 
        }

        System.out.print("顯示輸入: "); 
        for(int i = 0; i < weightlist.size(); i++) 
            System.out.print(weightlist.get(i) + " "); 
        System.out.println(); 
    }
}
