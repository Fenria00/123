import java.util.*;

public class BookFodder {
    public static void main(String[] args) {
    	
            }
    
    public static void mWeightinput(){
    	Scanner scanner = new Scanner(System.in);
        
        ArrayList<int> weightlist = new ArrayList<int>();

        System.out.println("輸入重量(克)(使用quit結束)"); 

        while(true) { 
            System.out.print("# "); 
            int weightinput = scanner.nextInt(); 
            if(weightinput.equals("quit"))
                 break; 
            weightlist.add(weightinput); 
        }

        System.out.print("顯示輸入: "); 
        for(int i = 0; i < weightlist.size(); i++) 
            System.out.print(weightlist.get(i) + " "); 
        System.out.println(); 
    }
}
